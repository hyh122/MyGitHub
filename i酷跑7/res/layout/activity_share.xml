<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sharebg1"
    android:orientation="vertical" >
	

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:orientation="vertical" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal">
		
 		
            
            
           

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="41dip"
             >

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp" 
         android:background="@drawable/sharebg2"
         android:layout_marginLeft="30dip"
         android:layout_marginRight="30dip"
        >
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            
              <TextView
                android:id="@+id/tv_sportDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
               	android:gravity="center"
                android:text="2014/4/7"
              
                android:layout_gravity="center"
                android:layout_marginTop="30dip"
                android:textColor="#ffffff"
            	android:textSize="30sp"
            	android:textStyle="bold"/>
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip" >
 				<TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      android:layout_marginTop="0dip"
                    android:layout_marginLeft="30dip"
                    android:text="开始时间:"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                   />
                <TextView
                    android:id="@+id/tv_startTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="0"
                   android:textColor="#ffffff"
                    android:textSize="25sp"
                    />

               

                

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip" >
 				<TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      android:layout_marginTop="0dip"
                    android:layout_marginLeft="30dip"
                    android:text="用时:"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                   />
                <TextView
                    android:id="@+id/tv_useTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="0"
                   android:textColor="#ffffff"
                    android:textSize="25sp"
                    />

               

                

            </LinearLayout>
<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip" >
 				<TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_marginTop="0dip"
                    android:layout_marginLeft="30dip"
                    android:text="路程:"
                   android:textColor="#ffffff"
                    android:textSize="25sp"
                  />
                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="0"
                   android:textColor="#ffffff"
                    android:textSize="25sp"
                   />

               

                

                
                
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip" >
 				<TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dip"
                    android:layout_marginLeft="30dip"
                    android:text="卡路里:"
                   	android:textColor="#ffffff"
                    android:textSize="25sp"
                    />
                <TextView
                    android:id="@+id/tv_calouis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                   />

               

                

                
                
            </LinearLayout>
<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip" >
 				<TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      android:layout_marginTop="0dip"
                    android:layout_marginLeft="30dip"
                    android:text="平均心率:"
                   android:textColor="#ffffff"
                    android:textSize="25sp"
                 />
                <TextView
                    android:id="@+id/tv_avgHeartrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                   />

               

                

                
                
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dip" >
 				<TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      android:layout_marginTop="0dip"
                    android:layout_marginLeft="30dip"
                    android:text="平均速率:"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                   />
                <TextView
                    android:id="@+id/tv_avgSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                />

               

                    
        
        
        
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:src="@drawable/share3"
            android:gravity="center" 
            android:layout_gravity="center"/>

    </LinearLayout>
   
</LinearLayout>
