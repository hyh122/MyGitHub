<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/txt_theme57"
    android:orientation="vertical" >
	

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dip"
        android:background="@drawable/cover_2"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal">
		
 		
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
           	 	android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
               	android:gravity="center"
                android:text="时间"
                 android:textColor="@color/bluegreen"
            	android:textSize="25sp"
            	android:textStyle="bold"  />
            
           

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="71dip" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="22dip"
                android:src="@drawable/card_title_2" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="战绩"
            android:textSize="30sp" 
             android:textColor="#33FF00"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
         >
  
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip" >
 				<TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      android:layout_marginTop="0dip"
                    android:layout_marginLeft="30dip"
                    android:text="用时:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_usetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="0"
                    android:textColor="#333333"
                    android:textSize="30sp"
                    android:textStyle="bold" />

               

                

            </LinearLayout>
<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip" >
 				<TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      android:layout_marginTop="0dip"
                    android:layout_marginLeft="30dip"
                    android:text="路程:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_stepnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="0"
                    android:textColor="#333333"
                    android:textSize="30sp"
                    android:textStyle="bold" />

               

                

                
                
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip" >
 				<TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      android:layout_marginTop="0dip"
                    android:layout_marginLeft="30dip"
                    android:text="卡路里:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_colouis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="0"
                    android:textColor="#333333"
                    android:textSize="30sp"
                    android:textStyle="bold" />

               

                

                
                
            </LinearLayout>
<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip" >
 				<TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      android:layout_marginTop="0dip"
                    android:layout_marginLeft="30dip"
                    android:text="平均心率:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_avgheartrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="0"
                    android:textColor="#333333"
                    android:textSize="30sp"
                    android:textStyle="bold" />

               

                

                
                
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip" >
 				<TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      android:layout_marginTop="0dip"
                    android:layout_marginLeft="30dip"
                    android:text="平均速率:"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_avgspeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="0dip"
                    android:text="0"
                    android:textColor="#333333"
                    android:textSize="30sp"
                    android:textStyle="bold" />

               

                

                
                
            </LinearLayout>
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="51dip"
                android:layout_marginTop="20dip"
                android:src="@drawable/share_male_desc_2" />

        </LinearLayout>

    </LinearLayout>

   
</LinearLayout>
