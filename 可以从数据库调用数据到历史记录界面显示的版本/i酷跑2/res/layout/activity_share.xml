            	android:textStyle="bold"/>
            
           

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="71dip" >

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
         >
  
