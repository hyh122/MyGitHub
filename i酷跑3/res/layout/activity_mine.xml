<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#ffffff"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
             >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10sp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="30dip"
                    android:textStyle="bold" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="1sp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:layout_width="48dip"
                        android:layout_height="48dip"
                        android:src="@drawable/card_title_2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20sp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/txt_personal_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Sharl Hason"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_personal_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="男 / 50kg / 175cm"
                            android:textColor="@color/grey" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:src="@drawable/battery_horizontal_dividing_line" />
            </LinearLayout>

        
            <LinearLayout
                android:id="@+id/tv_personal_info"
                android:layout_width="match_parent"
                android:layout_height="58dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/ic_three"
                    android:drawablePadding="13sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15sp"
                    android:text="个人信息"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:layout_marginTop="5sp"
                        android:src="@drawable/battery_horizontal_dividing_line" />
                    
                </LinearLayout>

            </LinearLayout>
            
 			<LinearLayout
 			    android:id="@+id/tv_history"
 			    android:layout_width="match_parent"
 			    android:layout_height="wrap_content"
 			    android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.1sp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/history"
                    android:drawablePadding="13sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15sp"
                    android:text="历史记录"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>
              <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:layout_marginTop="0sp"
                        android:src="@drawable/battery_horizontal_dividing_line" />
                    
                </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_friendsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_running_scheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.1sp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/friend"
                    android:drawablePadding="13sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15sp"
                    android:text="我的好友"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>
 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                       android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:layout_marginTop="0sp"
                        android:src="@drawable/battery_horizontal_dividing_line" />
                    
                </LinearLayout>

            <LinearLayout
                android:id="@+id/history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_start_running"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.1sp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/dongtai"
                    android:drawablePadding="13sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15sp"
                    android:text="好友动态"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:layout_marginTop="0sp"
                        android:src="@drawable/battery_horizontal_dividing_line" />
                    
                </LinearLayout>

           
         
         
        </LinearLayout>
    </ScrollView>

</LinearLayout>